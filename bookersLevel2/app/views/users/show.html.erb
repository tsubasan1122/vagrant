				
<div class="body">
  <div class="container">
				<p id="notice">
 					<%=  notice %> 
				</p>
				<div class="row">
  				<div class="col-xs-3">
			    <%= render 'users/list', user: @user %>
			    <%= render 'books/list', book: @book %>
				</div>

						<div class="col-xs-9">
						    <h2>Books</h2>

						    <table class="table table-hover table-inverse">
						      <thead>
						        <tr>
						          <th></th>
						          <th>Title</th>
						          <th>Opinion</th>
						          <th colspan="3"></th>
						        </tr>
						      </thead>
						      <tbody>
						        <% @posts.each do |post| %>
						          <tr>
						            <td><%= attachment_image_tag(@user, :image, :fill, 50, 50, format: 'jpeg', class: "attachment user profile_image fallback ", fallback: "no_image.jpg") %></td>
						            <td><%= link_to post.title, book_path(post.id), class: "book_#{post.id}" %></td>
						            <td><%= post.opinion %></td>
						          </tr>
						        <% end %>
						      </tbody>
						    </table>
						  </div>
						</div>
				     </div>
				</div>
			</div>
