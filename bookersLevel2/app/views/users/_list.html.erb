
		<div class="row">
				<h2>User info</h2>
				<%= attachment_image_tag user, :image,:fill,100,100, format: "jpeg",fallback:"no_image.jpg" %>
				<table class="table">
					<tbody>
						<tr></tr>
						<tr>
							<th>name</th>
							<th><%= user.username %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= user.introduction %></th>
						</tr>
					</tbody>
				</table>
				<div class="row">
					<%= link_to "",edit_user_path(current_user),class:"col-xs-12 btn btn-default glyphicon  glyphicon-wrench edit_user_#{user.id}" %>
			</div>
		</div>