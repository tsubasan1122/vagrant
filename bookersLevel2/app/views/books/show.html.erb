<div class="body">
  <div class="container">
    <p id="notice"><%= notice %></p>
	<div class="row">
	  <div class="col-xs-3">

	    <%= render 'users/list', user: @user %>
	    <%= render 'books/list', book: @book %>
	  </div>
	  <div class="col-xs-9">
	    <h2>Book detail</h2>

	    <table class="table table-hover table-inverse">
	      <thead>
	        </tr>
	      </thead>

	      <tbody>

	        <tr>
	          <td>
	            <%= link_to user_path(@books.user.id) do %><%= attachment_image_tag @books.user, :image, :fill, 40, 40, format: 'jpeg', class: "attachment user profile_image fallback user_#{@books.user.id}", fallback: "no_image.jpg" %><br><%= @books.user.username %><% end %>
	            <br>
	          </td>
	          <td>
	            <%= @books.title %>
	          </td>
	          <td>
	            <%= @books.opinion %>
	          </td>

	          <% if @books.user.id == current_user.id %>

	            <td>
	              <%= link_to "Edit", edit_book_path(@books), class: "btn-sm btn-success edit_book_#{@books.id}" %>
	            </td>

	            <td>
	                <%= link_to "Destroy", book_path(@books), method: :delete, class: "btn-sm btn-danger destroy_book_#{@books.id}","data-confirm" => "本当に削除しますか？" %>
	            </td>

	          <% end %>
	        </tr>

	      </tbody>
	    </table>
	 
	</div>
  </div>
</div>